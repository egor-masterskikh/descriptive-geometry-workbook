\startcomponent .
    \startuseMPgraphic{горизонтальная плоскость}
    fig_width := \framedwidth;
    fig_height := \framedheight;

    x_max := fig_width;
    y1_max := .5 * fig_height;
    z_max := fig_height - y1_max;

    draw_axes(x_max, y1_max, z_max, 0);

    draw get_line_and_draw_label(
        .8 * x_max, 0,
        0.5 * (-x_max, z_max), 0.5,
        0, "$\Sigma_2$", top
    ) withpen base_pen;
    \stopuseMPgraphic
\stopcomponent